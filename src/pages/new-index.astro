---
import ModernLayout from "../layouts/ModernLayout.astro";
import ColorGrid from "../components/ColorGrid.astro";

const title = "Color Grid";
const description = "A grid of colors generated from a palette.";

const palette = [
    "#f7b210", // gold
    "#efd7b3", // sand
    "#eb790a", // amber
    "#ee5104", // flame
    "#e07c6b", // coral
    "#ca340a", // vermilion
    "#618d20", // sage
    "#387c2c", // pine
    "#70b1a1", // mint
    "#2c8182", // turquoise
    "#225287", // river
    "#093351", // midnight
];
---

<ModernLayout title={title} description={description} bodyClass="p-4 bg-sand">
    <ColorGrid palette={palette} count={168} />
</ModernLayout>
